<div style="display:flex; flex-direction:column; width:100vw; height:100vh">
  <div style="width:100vw;  display:flex; flex-direction:row">
    <%= link_to "Upload CSV", new_csv_upload_path %>
    &nbsp;
    <% if GlucoseMeasurement.count > 0 %>
      <%= button_to "All data", graph_path, method: :get %>
      &nbsp;
      <%= form_tag(graph_path, method: :get, style: "align-items:flex-start; display:flex; flex-direction:row") do |form| %>
        <%= select_date(@start_time || Date.current, prefix: 'start_time') %>
        &nbsp;
        <%= select_date @end_time, prefix: 'end_time' %>
        &nbsp;
        <%= submit_tag "Apply" %>
      <% end %>
    <% end %>
  </div>

  <div style="width:100vw; height:96vh; ">
    <%= @graph %>
  </div>
</div>
